<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:local="clr-namespace:SampleApp"
                 x:Class="SampleApp.MainPage">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0"
                    Text="Toggle Panel A" 
                    Command="{Binding ToggleA}" />
            <Button Grid.Row="1" Grid.Column="0"
                    Text="Toggle Panel B" Command="{Binding ToggleB}" />

            <local:PanelAView Grid.Row="0" Grid.Column="1"
                              BindingContext="{Binding PanelAViewModel}"
                              IsVisible="{Binding IsVisible}" />
            <local:PanelBView Grid.Row="1" Grid.Column="1"
                              BindingContext="{Binding PanelBViewModel}" />
        </Grid>

    </ContentPage>
